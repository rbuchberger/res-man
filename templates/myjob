# export RESTIC_REPOSITORY_FILE            # Name of file containing the repository location (replaces --repository-file)
# export RESTIC_PASSWORD_FILE              # Location of password file (replaces --password-file)
# export RESTIC_PASSWORD_COMMAND           # Command printing the password for the repository to stdout
# export RESTIC_KEY_HINT                   # ID of key to try decrypting first, before other keys
# export RESTIC_CACERT                     # Location(s) of certificate file(s), comma separated if multiple (replaces --cacert)
# export RESTIC_TLS_CLIENT_CERT            # Location of TLS client certificate and private key (replaces --tls-client-cert)
# export RESTIC_CACHE_DIR                  # Location of the cache directory
# export RESTIC_COMPRESSION                # Compression mode (only available for repository format version 2)
# export RESTIC_PROGRESS_FPS               # Frames per second by which the progress bar is updated
